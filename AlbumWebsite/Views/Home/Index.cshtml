@{
    ViewBag.Title = "Home Page";
}

<body>

    <main role="main">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0"></li>
                <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="card-img-top" src="~/Content/images/image_xl/InnocentAnime.jpg" width="560" height="420" alt="Card image cap">
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1>@Resources.AlbumResource.AnimeSketchHeading;</h1>
                            <p>@Resources.AlbumResource.AnimeSketchParagraph</p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">@Resources.AlbumResource.SignUp</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="card-img-top" src="~/Content/images/image_xl/Luffy.jpg" width="560" height="420" alt="Card image cap">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>@Resources.AlbumResource.LuffyHeading</h1>
                            <p>@Resources.AlbumResource.LuffySketchParagraph</p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">@Resources.AlbumResource.LearnMore</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="card-img-top" src="~/Content/images/image_xl/FunkyGirl.jpg" width="560" height="420" alt="Card image cap">
                    <div class="container">
                        <div class="carousel-caption text-right">
                            <h1>@Resources.AlbumResource.FunkyGirlHeading</h1>
                            <p>@Resources.AlbumResource.FunkyGirlParagrapgh</p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">@Resources.AlbumResource.BrowseGallery</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">@Resources.AlbumResource.Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">@Resources.AlbumResource.Next</span>
            </a>
        </div>


